citHeader("To cite pseval2 in publications use:")

year = sub('.*(2[[:digit:]]{3})-.*', '\\1', meta$Date, perl = TRUE)
vers = paste("R package version",meta$Version)

citEntry(entry = "Manual",
         title = paste("pseval2:",meta$Title),
         author = "Michal Juraska",
         year = "2018",
         note = vers,
         textVersion = paste("Michal Juraska (",year,"). pseval2: ",meta$Title,". ",vers,".", sep="")
)
