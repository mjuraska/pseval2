citHeader("To cite pssmooth in publications use:")

year = "2019"
vers = paste("R package version",meta$Version)

citEntry(entry = "Manual",
         title = paste("pssmooth:",meta$Title),
         author = "Michal Juraska",
         year = "2019",
         note = vers,
         textVersion = paste("Michal Juraska (",year,"). pssmooth: ",meta$Title,". ",vers,".", sep="")
)
